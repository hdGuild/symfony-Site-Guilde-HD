{# app/Resources/views/ghdMainlayout.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        {% stylesheets filter='cssrewrite'
        'bundles/ghdhellblog/css/ghdMainLayout.css'
        'bootstrap/css/*.min.css' 
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        {# Assurer la comptabilité de HTML5 avec IE antérieur à v9 #}
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="container" id="bloc_page">
        
            <!-- En-tête global au site
                 Contient logo, banière, titre et slogan du site -->
            <header class="row" id="site_header">
            </header>
            <!-- Liens de navigations entre les sections du site -->
            <nav class="navbar navbar-default" id="main_nav_default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapsed">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('ghd_hell_web_homepage',{name:'Alaster'}) }}" >Home</a></li>
                            <li><a href="{{ path('ghd_hell_blog_homepage',{name:'Alaster'}) }}" >Blog</a></li>
                            <li><a href="{{ path('ghd_hell_wiki_homepage',{name:'Alaster'}) }}">Wiki</a></li>
                            <li><a href="{{ path('ghd_hell_forum_homepage',{name:'Alaster'}) }}">Forum</a></li>
                            <li><a href="{{ path('ghd_hell_download_homepage',{name:'Alaster'}) }}">Downloads</a></li>
                            <li><a href="{{ path('ghd_hell_user_homepage',{name:'Alaster'}) }}">User</a></li>
                        </ul>
                        {# Mise en commentaire en attente de mise en place autentification --> 
                        <!-- Connection -->
                        <ul class="nav navbar-nav navbar-right">                            
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li><a><span class="glyphicon glyphicon-user"></span> connecté en tant que {{ app.user.username }}</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">Déconnection</a></li>
                            {% else %}
                                <li><a><span class="glyphicon glyphicon-exclamation-sign"></span> Bonjour. Merci de vous...</a></li> 
                                <li><a href="{{ path('fos_user_security_login') }}">Connecter</a></li>                                    
                            {% endif %}  
                            </li>
                        </ul>
                        --> Fin mise en commentaire autentification #}
                </div>
            </nav>
            <!-- Le corps du site est différent en fonction des sections (blog ou projets)
                 son affichage sera précisé dans les sections filles.
                 Cependant, c'est toujours au sein d'un même élément que ces sections apparaîtront.
                 -->
            {% block body %}
            {% endblock %}
            <!-- Pied de page global au site 
                 Contient liens de contact, informations sur l'auteru, mentions légales, etc. -->
            <footer class="row" id="site_footer">
                <div class="col-md-3">
                    <p>Tous droits réservés &copy; 2015. </p>
                </div>
                <div class="col-md-6">
                    <p>Icônes créées par <a href="http://glyphicons.com/">Glyphicons</a> 
                    pour <a href="http://getbootstrap.com/">Bootstrap</a></p>
                </div>
                <div class="col-md-3">
                    <a href="mailto:pajcarpentier@gmail.com">
                        <span class="glyphicon glyphicon-envelope"></span> Contacter le webmestre.</a>
                </div>
            </footer>
        </div>
        {% javascripts 
            'https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'
            'bootstrap/js/*.min.js'
            %}
            <script type="text\javascript" src="{{asset_url}}"></script>
        {% endjavascripts%}
    </body>
</html>